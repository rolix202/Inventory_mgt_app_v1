
<div class="my-3 p-3 bg-body rounded shadow-sm">
    <h6 class="border-bottom pb-2 mb-0">Categories</h6>
    <% if (categories && categories.length > 0) { %>
        <% categories.forEach((category) => { %>
            <div class="d-flex text-body-secondary pt-3">
                <a href="<%= category.url %>"><div class="category_image flex-shrink-0 me-2 rounded" style="width: 35px; height: 35px; overflow: hidden;">
                    <img src="<%= category.category_image_secure_id %>" alt="<%= category.name %>" style="width: 100%; height: auto;">
                </div></a>
                
                <p class="pb-3 mb-0 small lh-sm border-bottom w-100">
                    <strong class="d-block text-gray-dark">
                        <a class="nav-link text-capitalize" href="<%= category.url %>"><%= category.name %></a>
                    </strong>
                    In stock: <%= category.itemCount %>
                </p>
            </div>
        <% }) %>
    <% } %>
</div>
