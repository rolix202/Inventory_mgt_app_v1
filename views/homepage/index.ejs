<div class="main">
  <div class="container">
    <div class="pt-5">
      <div class="row row-cols-1 row-cols-md-3 g-4 px-3">
        <% if (categories && categories.length > 0){ %>
          <% categories.forEach((category) => { %>
            <div class="col">
              <div class="card mb-3 category_card h-100">
                <div class="row g-0 h-100">
                  <div class="col-md-5">
                    <div class="cat_img h-100 d-flex align-items-center justify-content-center">
                        <div class="p-1 h-100">
                          <a href="<%= category.url %>">
                            <img src="<%= category.category_image_secure_id %>" class="img-fluid rounded" alt="..." style="width: 100%; height: 100%; object-fit: cover;">
                          </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-7 cat_info">
                    <div class="card-body mb-3">
                      <a href="<%= category.url %>">
                        <h5 class="card-title text-capitalize"><%= category.name %></h5>
                      </a>
                      <p class="card-text"> 
                        <%= category.description.length > 60 ? category.description.substring(0, 60) + "..." : category.description %>
                      </p>
                      <p class="card-text"><small class="text-body-secondary">In Stock: <%= category.itemCount %></small></p>
                    </div>
                    <div class="category_action w-100">
                      <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-primary me-2 px-2 py-1"><i class="fa-solid fa-pen-to-square fs-6"></i></button>
                        <a href="/categories/<%= category._id %>/delete" class="btn btn-danger px-2 py-1"><i class="fa-solid fa-trash fs-6"></i></a>
                      </div>
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </div>
</div>
